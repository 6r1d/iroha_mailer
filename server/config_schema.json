{
    "type" : "object",
    "properties" : {
        "http": {
            "type": "object",
            "properties": {
                "port": {"type": "number"},
                "host": {"type": "string", "format": "ipv4"}
            },
            "required": ["port", "host"]
        },
        "smtp": {
            "type": "object",
            "properties": {
                "host": {"type": "string"},
                "ssl": {"type": "boolean"},
                "tls": {"type": "boolean"},
                "user": {"type": "string"},
                "password": {"type": "string"}
            },
            "required": ["host", "user", "password"]
        },
        "mail": {
            "type": "object",
            "properties": {
                "email_from": {"type": "string"}
            },
            "required": ["email_from"]
        },
        "subscription": {
            "type": "object",
            "properties": {
                "root_url": {"type": "string"},
                "enable_list_unsubscribe": {"type": "boolean"}
            },
            "required": ["root_url", "enable_list_unsubscribe"]
        }
    },
    "required": ["http", "smtp", "mail", "subscription"]
}